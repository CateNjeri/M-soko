{{#each shoppingCart.items as |item|}}
  <div class="well col-md-6 col-md-offset-3">
    <h5>{{item.title}} ${{item.price}}</h5>
    <!-- {{cart-quantity item}} -->
    <h6>Quantity: {{item.quantity}}</h6>
    <button {{action 'removeFromCart' item}} class="trash pull-right"><i class="trash icon"></i></button>
  </div>
{{/each}}

{{#if shoppingCart.items}}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3 class="pull-right">Total: ${{shoppingCart.total}}</h3>
      <button class="btn btn-success pull-left" {{action 'checkOut'}}>Check Out!</button>
    </div>
  </div>
{{else}}
  {{#if purchaseMessage}}
  <div class="row">
    <div class="purchase-message">
      <h3>Successfully purchased item(s)!</h3>
    </div>
  </div>
  {{else}}
    <div class="col-md-6 col-md-offset-4">
      <h3>There are no items in your shopping cart!</h3>
    </div>
  {{/if}}
{{/if}}
