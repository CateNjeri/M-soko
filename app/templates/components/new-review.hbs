<div class="col-md-8 col-md-offset-2">
  {{#if addNewReview}}
    <div>
      <form>
        <h3>New Review: </h3>
        <div class="form-group">
          {{input value=author id="author" class="form-control" placeholder="Enter Your Name"}}
        </div>
        <div class="form-group">
          {{input value=reviewTitle id="reviewTitle" class="form-control" placeholder="Enter Review Title"}}
        </div>
        <div class="form-group">
          {{input value=comment id="comment" class="form-control" placeholder="Enter Your Review"}}
        </div>
        <button class="btn btn-default center-block" {{action 'saveReview'}}>Submit Review</button>
      </form>
    </div>
  {{else}}
    <button class="no-btn add-review center-block" {{action 'reviewFormShow'}}>Add New Review <i class="fa fa-level-down" aria-hidden="true"></i>
  </button>
  {{/if}}
</div>
